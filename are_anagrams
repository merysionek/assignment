#póki co wrzucam samą funkcję are_anagrams


def are_anagrams(s1,s2,s3):
    # basic validation - checking if arguments are of type 'string'
    if(isinstance(s1, str) & isinstance(s2, str) & isinstance(s3, str)):

        # cutting white spaces
        s1,s2,s3=s1.replace(" ", "").upper(),s2.replace(" ", "").upper(),s3.replace(" ", "").upper()

        if not(len(s1)==len(s2)==len(s3)):
        #if s1,s2,s3 differ in length they cannot be anagrams
            return(False)

        #function cutting string into list, sorting it and merging into a string
        def cutFUN(x):
            x=list(x)
            x.sort()
            x="".join(x)
            return(x)
        #checking if obtained strings are the same
        if(cutFUN(s1)==cutFUN(s2)==cutFUN(s3)):
            return(True)
        else:
            return(False)

    else:
        return(False)

